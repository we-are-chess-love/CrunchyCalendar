<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default CalendarView style -->
    <declare-styleable name="CalendarViewTheme">
        <attr name="calendarViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CalendarView">
        <!-- Month -->
        <attr name="calendar_month_text_color" format="color" />

        <!-- Date Bar -->
        <attr name="calendar_day_bar_background" format="color" />
        <attr name="calendar_day_bar_text_color" format="color" />

        <!-- Dates Customization -->
        <attr name="calendar_date_background" format="reference" />
        <attr name="calendar_date_text_color" format="reference" />
        <attr name="calendar_dates_font" format="reference"/>
        <attr name="calendar_selected_dates_background_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="CalendarDateStates">
        <attr name="calendar_state_today" format="boolean" />
        <attr name="calendar_state_selected" format="boolean" />
        <attr name="calendar_state_disabled" format="boolean" />
    </declare-styleable>

</resources>